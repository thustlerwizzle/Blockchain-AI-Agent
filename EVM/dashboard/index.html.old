<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blockchain AI Agent Dashboard</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 20px;
        }

        .container {
            max-width: 1400px;
            margin: 0 auto;
        }

        .header {
            background: rgba(255, 255, 255, 0.95);
            padding: 20px;
            border-radius: 10px;
            margin-bottom: 20px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .header h1 {
            color: #333;
            margin-bottom: 10px;
        }

        .status {
            display: inline-block;
            padding: 5px 15px;
            border-radius: 20px;
            font-size: 14px;
            font-weight: bold;
        }

        .status.running {
            background: #10b981;
            color: white;
        }

        .status.stopped {
            background: #ef4444;
            color: white;
        }

        .grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 20px;
            margin-bottom: 20px;
        }

        .card {
            background: rgba(255, 255, 255, 0.95);
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .card h2 {
            color: #333;
            margin-bottom: 15px;
            font-size: 18px;
        }

        .stat {
            display: flex;
            justify-content: space-between;
            padding: 10px 0;
            border-bottom: 1px solid #eee;
        }

        .stat:last-child {
            border-bottom: none;
        }

        .stat-label {
            color: #666;
        }

        .stat-value {
            font-weight: bold;
            color: #333;
        }

        .transaction-list {
            max-height: 400px;
            overflow-y: auto;
        }

        .transaction-item {
            padding: 10px;
            margin-bottom: 10px;
            background: #f9fafb;
            border-radius: 5px;
            border-left: 4px solid #667eea;
        }

        .transaction-item.suspicious {
            border-left-color: #ef4444;
        }

        .transaction-hash {
            font-family: monospace;
            font-size: 12px;
            color: #666;
            word-break: break-all;
        }

        .risk-badge {
            display: inline-block;
            padding: 3px 8px;
            border-radius: 12px;
            font-size: 11px;
            font-weight: bold;
            margin-top: 5px;
        }

        .risk-high {
            background: #fee2e2;
            color: #991b1b;
        }

        .risk-medium {
            background: #fef3c7;
            color: #92400e;
        }

        .risk-low {
            background: #d1fae5;
            color: #065f46;
        }

        .controls {
            display: flex;
            gap: 10px;
            margin-top: 20px;
        }

        button {
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-weight: bold;
            transition: all 0.3s;
        }

        .btn-primary {
            background: #667eea;
            color: white;
        }

        .btn-primary:hover {
            background: #5568d3;
        }

        .btn-danger {
            background: #ef4444;
            color: white;
        }

        .btn-danger:hover {
            background: #dc2626;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>ü§ñ Blockchain AI Agent Dashboard</h1>
            <span id="agentStatus" class="status stopped">Stopped</span>
        </div>

        <div class="grid">
            <div class="card">
                <h2>üìä Statistics</h2>
                <div class="stat">
                    <span class="stat-label">Transactions Processed</span>
                    <span class="stat-value" id="txProcessed">0</span>
                </div>
                <div class="stat">
                    <span class="stat-label">Suspicious Transactions</span>
                    <span class="stat-value" id="suspiciousTx">0</span>
                </div>
                <div class="stat">
                    <span class="stat-label">Strategies Triggered</span>
                    <span class="stat-value" id="strategiesTriggered">0</span>
                </div>
                <div class="stat">
                    <span class="stat-label">Chains Monitored</span>
                    <span class="stat-value" id="chainsMonitored">0</span>
                </div>
                <div class="stat">
                    <span class="stat-label">Uptime</span>
                    <span class="stat-value" id="uptime">0s</span>
                </div>
            </div>

            <div class="card">
                <h2>üéØ Learning Metrics</h2>
                <div class="stat">
                    <span class="stat-label">Average Reward</span>
                    <span class="stat-value" id="avgReward">0.00</span>
                </div>
                <div class="stat">
                    <span class="stat-label">Success Rate</span>
                    <span class="stat-value" id="successRate">0%</span>
                </div>
                <div class="stat">
                    <span class="stat-label">Total Actions</span>
                    <span class="stat-value" id="totalActions">0</span>
                </div>
                <div class="stat">
                    <span class="stat-label">Best Action</span>
                    <span class="stat-value" id="bestAction">-</span>
                </div>
            </div>

            <div class="card">
                <h2>‚öôÔ∏è Controls</h2>
                <div class="controls">
                    <button class="btn-primary" onclick="startAgent()">Start Agent</button>
                    <button class="btn-danger" onclick="stopAgent()">Stop Agent</button>
                </div>
            </div>
        </div>

        <div class="card">
            <h2>üì• Recent Transactions</h2>
            <div class="transaction-list" id="transactionList">
                <p style="color: #666; text-align: center; padding: 20px;">
                    No transactions yet. Start the agent to begin monitoring.
                </p>
            </div>
        </div>
    </div>

    <script>
        let updateInterval;

        async function fetchStats() {
            try {
                const response = await fetch('http://localhost:3001/api/stats');
                const data = await response.json();
                updateDashboard(data);
            } catch (error) {
                console.error('Failed to fetch stats:', error);
            }
        }

        function updateDashboard(data) {
            // Update statistics
            document.getElementById('txProcessed').textContent = data.stats?.transactionsProcessed || 0;
            document.getElementById('suspiciousTx').textContent = data.stats?.suspiciousTransactions || 0;
            document.getElementById('strategiesTriggered').textContent = data.stats?.strategiesTriggered || 0;
            document.getElementById('chainsMonitored').textContent = data.stats?.chainsMonitored || 0;
            document.getElementById('uptime').textContent = formatUptime(data.stats?.uptime || 0);

            // Update learning metrics
            document.getElementById('avgReward').textContent = (data.metrics?.averageReward || 0).toFixed(2);
            document.getElementById('successRate').textContent = ((data.metrics?.successRate || 0) * 100).toFixed(2) + '%';
            document.getElementById('totalActions').textContent = data.metrics?.totalActions || 0;
            document.getElementById('bestAction').textContent = data.metrics?.bestAction || '-';

            // Update status
            const statusEl = document.getElementById('agentStatus');
            if (data.running) {
                statusEl.textContent = 'Running';
                statusEl.className = 'status running';
            } else {
                statusEl.textContent = 'Stopped';
                statusEl.className = 'status stopped';
            }

            // Update transactions
            if (data.recentTransactions && data.recentTransactions.length > 0) {
                const listEl = document.getElementById('transactionList');
                listEl.innerHTML = data.recentTransactions.map(tx => `
                    <div class="transaction-item ${tx.suspicious ? 'suspicious' : ''}">
                        <div class="transaction-hash">${tx.hash}</div>
                        <div style="margin-top: 5px;">
                            <span>${tx.chain}</span> | 
                            <span>Risk: ${tx.riskScore}</span>
                            <span class="risk-badge ${getRiskClass(tx.riskScore)}">${getRiskLabel(tx.riskScore)}</span>
                        </div>
                    </div>
                `).join('');
            }
        }

        function formatUptime(ms) {
            const seconds = Math.floor(ms / 1000);
            const minutes = Math.floor(seconds / 60);
            const hours = Math.floor(minutes / 60);
            if (hours > 0) return `${hours}h ${minutes % 60}m`;
            if (minutes > 0) return `${minutes}m ${seconds % 60}s`;
            return `${seconds}s`;
        }

        function getRiskClass(score) {
            if (score >= 70) return 'risk-high';
            if (score >= 40) return 'risk-medium';
            return 'risk-low';
        }

        function getRiskLabel(score) {
            if (score >= 70) return 'HIGH';
            if (score >= 40) return 'MEDIUM';
            return 'LOW';
        }

        async function startAgent() {
            try {
                await fetch('http://localhost:3001/api/start', { method: 'POST' });
                if (!updateInterval) {
                    updateInterval = setInterval(fetchStats, 2000);
                }
            } catch (error) {
                alert('Failed to start agent. Make sure the API server is running.');
            }
        }

        async function stopAgent() {
            try {
                await fetch('http://localhost:3001/api/stop', { method: 'POST' });
            } catch (error) {
                alert('Failed to stop agent.');
            }
        }

        // Start polling for stats
        fetchStats();
        updateInterval = setInterval(fetchStats, 2000);
    </script>
</body>
</html>

